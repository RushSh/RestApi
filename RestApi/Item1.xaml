<Page
    x:Class="RestApi.Item1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RestApi"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock Margin="10,10,0,0" Text="Main Page Content"/>
        <Button x:Name="btn_CallRestEndPoint" Content="Call REST Endpoint" HorizontalAlignment="Left" Margin="20,50,0,0" VerticalAlignment="Top" Width="333" RenderTransformOrigin="0.491,-0.156" Click="btn_CallRestEndPoint_Click"/>
        <TextBox x:Name="txtRESTUrl" Text="Enter REST Endpoint" HorizontalAlignment="Right" Margin="0,50,0,0" VerticalAlignment="Top" Width="1142" RenderTransformOrigin="0.491,-0.156" Opacity="0.3"/>
    </Grid>
</Page>
